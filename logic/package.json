{
  "name": "chameleon-chess-logic",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "all": "npm-run-all check format lint test coverage clean build",
    "build": "tsc",
    "clean": "rm -rf dist/*",
    "check": "tsc --noEmit",
    "coverage": "nyc --extends @istanbuljs/nyc-config-typescript npm run test -- -R dot",
    "format": "prettier --write src",
    "lint": "eslint src",
    "prepare": "npm run build",
    "start": "npm test -- --watch --watch-files src",
    "test": "mocha -r ts-node/register 'src/**/*.test.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "ts-node": "^10.8.0"
  }
}
